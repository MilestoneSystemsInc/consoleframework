<Window Title="Main menu and context menu example" Height="7">
  <Window.ContextMenu>
    <ContextMenu>
      <MenuItem Title="Show Message" Command="{Binding MyCommand, Mode=OneWay}"/>
      <MenuItem Title="Submenu" Type="Submenu">
        <MenuItem Title="Show Message" Command="{Binding MyCommand, Mode=OneWay}"/>
      </MenuItem>
    </ContextMenu>
  </Window.ContextMenu>
  <Panel>
    <TextBlock>Press right mouse button to open the Context Menu</TextBlock>
  </Panel>
</Window>